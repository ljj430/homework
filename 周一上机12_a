#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
	struct student{

    char name[21];//姓名

    int sno;//学号

    double chinese;//语文

    double english;//英语

    double math;//数学

    double sum;//总成绩

};
	struct student a[100];
	struct student b;
	int n;
	scanf("%d",&n);
	int i=0;
	int j=0;
	for(i=0;i<n;i++)
	{
		scanf("%s%d%lf%lf%lf",a[i].name,&a[i].sno,&a[i].chinese,&a[i].english,&a[i].math);
		a[i].sum=a[i].chinese+a[i].english+a[i].math;
		for(j=0;j<i;j++)
		{
			if(a[i].sum<a[j].sum)
			{
				b=a[i];
				for(int k=i-1;k>=j;k--)
				{
						
					a[k+1]=a[k];
				}
				a[j]=b;
			}
			else if(a[i].sum==a[j].sum)
			{
				if(strcmp(a[i].name,a[j].name)>0)
				{
					b=a[i];
					for(int k=i-1;k>=j;k--)
					{
							
						a[k+1]=a[k];
					}
					a[j]=b;
				}
			}

		}	
	}
	for(i=n-1;i>=0;i--)
	{
		printf("[name:%s,sum:%g,sno:%d]\n",a[i].name,a[i].sum,a[i].sno);
	}
	return 0;
}
